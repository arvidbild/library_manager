extends layout

block content

    h1 New Loan
    
    form(method="post", actions="/new_loan")
      p
        label(for='book_id') Book
        select#book_id(name='book_id')   
            each book in books         
                option(value=book.id)= book.title
      p
        label(for='patron_id') Patron
        select#patron_id(name='patron_id')
            each patron in patrons    
                option(value=patron.id)= patron.first_name
      p
        label(for='loaned_on') Loaned on:
        input(name="loaned_on" type="text" value=loan.loaned_on id="date" required)
      p
        label(for='return_by') Return by:
        input(name="return_by" type='text', value=loan.return_by required)
      p
        input(type='submit', value='Create New Loan')